<%- layout('/layouts/boilerplate') %>

<div class="row mt-3 mb-3">
    <div class="col-6 offset-3">
        <h2><b><%= listing.title %></b></h2>
    </div>

    <div class="col-6 offset-3">
        <div class="card listing-card">
            <img
                src="<%= listing.image %>"
                class="card-img-top show-img"
                alt="listing_image"
            >

            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %>
                    <br>

                    <b>Price:</b>
                    &#x20B9;
                    <%= new Intl.NumberFormat("en-IN", { maximumFractionDigits: 0 })
                        .format(Number(listing.price)) %>
                    / Night
                    <!-- Intl.NumberFormat used to format numbers in Indian currency style -->

                    <br>

                    <b>Location:</b> <%= listing.location %>
                    <br>

                    <b>Country:</b> <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/listings" class="btn btn-dark back-btn">Go Back</a>

            <form method="post" action="/listings/<%= listing._id %>/?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>

            <a
                href="/listings/<%= listing._id %>/edit"
                class="btn btn-dark edit-btn"
            >
                Edit
            </a>
        </div>
    </div>

    <div class="col-6 offset-3 mb-3">
        <hr>

        <h4><b>Leave a Review</b></h4>

        <form
            action="/listings/<%= listing.id %>/reviews"
            method="post"
            novalidate
            class="needs-validation"
        >
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">
                    Rating: <span id="ratingValue">3</span> ⭐
                </label>

                <input
                    type="range"
                    min="1"
                    max="5"
                    id="rating"
                    name="review[rating]"
                    class="form-range"
                    oninput="ratingValue.innerText = this.value"
                >
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <br>

                <textarea
                    name="review[comment]"
                    id="comment"
                    cols="113"
                    rows="5"
                    class="form-control"
                    placeholder="Write Something"
                    required
                ></textarea>

                <div class="invalid-feedback">
                    Please add some comments for review
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-dark">Submit</button>
            </div>
        </form>

        <hr>

        <h4><b>All Reviews</b></h4>

        <div class="row g-4 mt-2">
            <% for (let review of listing.reviews) { %>
                <div class="col-md-6">
                    <div class="card review-card h-100 p-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0 fw-semibold">
                                    Subhajit Chakraborty
                                </h6>

                                <span class="review-rating">
                                    <%= review.rating %> ⭐
                                </span>
                            </div>

                            <p class="card-text text-muted mb-0">
                                <%= review.comment %>
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0 d-flex justify-content-end pt-0">
                            <form
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="post"
                            >
                                <button class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
