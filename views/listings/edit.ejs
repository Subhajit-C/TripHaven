<%- layout('/layouts/boilerplate') %>
<body>
    <h3>Edit your Listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
        <input name="listing[title]" value="<%= listing.title %>">
        <br><br>
        <textarea name="listing[description]" rows="20" cols="60"><%= listing.description %></textarea>
        <br><br>
        <input name="listing[image]" value="<%= listing.image %>" style="width: 600px; height: 30px;">
        <br><br>
        <input name="listing[price]" value="<%= listing.price %>" type="number">
        <br><br>
        <input name="listing[location]" value="<%= listing.location %>" type="text">
        <br><br>
        <input name="listing[country]" value="<%= listing.country %>" type="text">
        <br><br>
        <button>Edit</button>
    </form>
</body>
